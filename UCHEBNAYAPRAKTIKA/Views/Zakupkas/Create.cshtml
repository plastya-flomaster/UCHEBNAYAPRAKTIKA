@model UCHEBNAYAPRAKTIKA.Models.Zakupka

@{
    ViewBag.Title = "Create";
}
<div class="container p-3">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Внести новую закупку</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p class="control-label col-md-3">Наименование работы</p>
                <div class="col-md-6">
                    <textarea class="form-control" data-val="true" id="WorkTitle" name="WorkTitle"
                              rows="3" placeholder="МАОУ СОШ №34"> </textarea>                   
                    @Html.ValidationMessageFor(model => model.WorkTitle, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">              
                <div class="col-md-3">
                    <p class="control-label col-md-3 text-md-right">Сумма контракта</p>
                    @Html.EditorFor(model => model.ContractSum, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.ContractSum, "", new { @class = "text-danger" })
                </div>          
               
                <div class="col-md-3">
                    <p class="control-label col-md-3 text-md-right">Сумма обеспечения</p>
                    @Html.EditorFor(model => model.CashCover, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CashCover, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-3">
                    <p class="control-label col-md-3 text-md-right">Срок сдачи</p>
                    @Html.EditorFor(model => model.Deadline, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Deadline, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
Ответственное лицо
                <div class="col-md-5">
                    @Html.DropDownList("ResponsiblePersonKey", null, htmlAttributes: new { @class = "form-control btn btn-default dropdown-toggle" })
                    @Html.ValidationMessageFor(model => model.ResponsiblePersonKey, "", new { @class = "text-danger" })
                    <p class="text-black-50">Если вы не нашли нужного человека в выпадающем списке, то добавьте его @Html.ActionLink("здесь", "Index", "ResponsiblePersons/Create")</p>

                </div>
            </div>

            <div class="form-group">
Часовой пояс
                <div class="col-md-5">
                    @Html.DropDownList("TimeZoneKey", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.TimeZoneKey, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
Электронная площадка                <div class="col-md-5">
                    @Html.DropDownList("AuctionKey", null, htmlAttributes: new { @class = "form-control btn btn-default dropdown-toggle" })
                    @Html.ValidationMessageFor(model => model.AuctionKey, "", new { @class = "text-danger" })
                                   <p class="text-black-50">Если вы не нашли адрес в выпадающем списке, то добавьте его @Html.ActionLink("здесь", "Index", "Adresses/Create")</p>

                </div>
            </div>

            <div class="form-group">
Адрес
                <div class="col-md-5">
                    @Html.DropDownList("AdressKey", null, htmlAttributes: new { @class = "form-control btn btn-default dropdown-toggle" })
                    @Html.ValidationMessageFor(model => model.AdressKey, "", new { @class = "text-danger" })
                    <p class="text-black-50">Если вы не нашли адрес в выпадающем списке, то добавьте его @Html.ActionLink("здесь", "Index", "Adress/Create")</p>

                </div>
            </div>

            <div class="form-group">
Статус закупки                <div class="col-md-5">
                    @Html.DropDownList("StatusKey", null, htmlAttributes: new { @class = "form-control" })
                    @Html.ValidationMessageFor(model => model.StatusKey, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Добавить" class="btn btn-success" />
                    @Html.ActionLink("Назад", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }

    </div>

