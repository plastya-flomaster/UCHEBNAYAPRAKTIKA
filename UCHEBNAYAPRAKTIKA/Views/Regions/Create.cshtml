@model UCHEBNAYAPRAKTIKA.Models.Region

@{
    ViewBag.Title = "Регион";
}
<div class="container p-3">
    <h2>Добавить новый регион</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
                <p class="control-label col-md-2">Регион</p>
                <div class="col-md-5">
                   @Html.EditorFor(model => model.RegionName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.RegionName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Добавить" class="btn btn-success" />
                    @Html.ActionLink("Назад", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }
</div>

