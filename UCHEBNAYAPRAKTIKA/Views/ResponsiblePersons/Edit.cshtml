@model UCHEBNAYAPRAKTIKA.Models.ResponsiblePerson

@{
    ViewBag.Title = "Ответственное лицо";
}
<div class="container p-3">
    <h2>Редактирование ответственного лица</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
           <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.ResponsiblePersonKey)

            <div class="form-group row col-md-7">
                <p class="control-label col-md-2">Имя</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.FirstName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.FirstName, "", new { @class = "text-danger" })
                </div>
           
                <p class="control-label col-md-2">Фамилия</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.LastName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.LastName, "", new { @class = "text-danger" })
                </div>
           
                <p class="control-label col-md-2">Отчество</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Patronymic, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Patronymic, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row col-md-7">
                <p class="control-label col-md-2">Укажите заказчика</p>
                <div class="col-md-10">
                    @Html.DropDownList("ClientKey", null, htmlAttributes: new { @class = "form-control btn btn-primary dropdown-toggle" })
                    @Html.ValidationMessageFor(model => model.ClientKey, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group row col-md-7">
                <p class="control-label col-md-2">Tелефон</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.PhoneNumber, new { htmlAttributes = new { @class = "form-control", @placeholder ="274-56-56"} })
                    @Html.ValidationMessageFor(model => model.PhoneNumber, "", new { @class = "text-danger" })
                </div>
          
                <p class="control-label col-md-2">Email</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.Email, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.Email, "", new { @class = "text-danger" })
                </div>
           
                <p class="control-label col-md-2">Заметки</p>
                <div class="col-md-10">
                    @Html.EditorFor(model => model.AdditionalInfo, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.AdditionalInfo, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <input type="submit" value="Сохранить" class="btn btn-primary" />
                @Html.ActionLink("Назад", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
            </div>
        </div>
    }
    </div>

