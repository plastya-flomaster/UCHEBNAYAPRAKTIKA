@model UCHEBNAYAPRAKTIKA.Models.Street

@{
    ViewBag.Title = "Улица";
}

<div class="container p-3">


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <h4>Улица</h4>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            <div class="form-group">
Выберите город
                <div class="col-md-5">
                    @Html.DropDownList("CityKey", null, htmlAttributes: new { @class = "form-control btn btn-primary dropdown-toggle" })
                    <p>Если вы не нашли город в выпадающем списке, то добавьте его @Html.ActionLink("здесь", "Create", "Cities")</p>
                    @Html.ValidationMessageFor(model => model.CityKey, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">Введите название улицы
                <div class="col-md-5">
                    @Html.EditorFor(model => model.StreetName, new { htmlAttributes = new { @class = "form-control", @placeholder="Базовая" } })
                    @Html.ValidationMessageFor(model => model.StreetName, "", new { @class = "text-danger" })
                </div>
            </div>

                      <div class="form-group">
                          <div class="col-md-offset-2 col-md-10">
                              <input type="submit" value="Добавить" class="btn btn-success" />
                              @Html.ActionLink("Назад", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                          </div>
            </div>
        </div>
    }

</div>
