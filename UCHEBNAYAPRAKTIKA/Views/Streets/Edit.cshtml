@model UCHEBNAYAPRAKTIKA.Models.Street

@{
    ViewBag.Title = "Улицы";
}
<div class="container p-3">
    <h2>Редактирование улицы</h2>


    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.StreetKey)

            <div class="form-group">

                <div class="col-md-10">
                    Укажите город
                    @Html.DropDownList("CityKey", null, htmlAttributes: new { @class = "btn btn-primary dropdown-toggle ml-5" })
                    @Html.ValidationMessageFor(model => model.CityKey, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-4">
                    Введите название улицы
                    @Html.EditorFor(model => model.StreetName, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.StreetName, "", new { @class = "text-danger" })
                </div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Сохранить" class="btn btn-primary" />
                    @Html.ActionLink("Назад", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
                </div>
            </div>
        </div>
    }
    </div>
