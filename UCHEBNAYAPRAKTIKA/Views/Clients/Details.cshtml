@model UCHEBNAYAPRAKTIKA.Models.Client

@{
    ViewBag.Title = "Details";
}
<body>
    <script>
        $(document).ready(function () {
            $("#facultyDetailSection").fadeOut(0);
            $("#studentDetailSection").fadeOut(0);
        });

        var selectedCourseName;

        $("#sltCourse").change(function () {
            selectedCourseName = $("#sltCourse").val().trim();

            if (selectedCourseName === "Select Course") {
                $("#facultyDetailSection").fadeOut();
                $("#studentDetailSection").fadeOut();
            }
            else {
                getFacultyTable();
                getStudentTable();
                $("#facultyDetailSection").fadeIn();
                $("#studentDetailSection").fadeIn();
            }
        });


    </script>

    <div class="container p-3">

        <div>
            <h4>Заказчик</h4>
            <hr />
            <dl class="dl-horizontal">
                <dt>Наименование организации</dt>

                <dd>
                    @Html.DisplayFor(model => model.OrganisationName)
                </dd>

                <dt>ИНН</dt>

                <dd>
                    @Html.DisplayFor(model => model.INN)
                </dd>

                <dt>КПП</dt>
                <dd>
                    @Html.DisplayFor(model => model.KPP)
                </dd>

            </dl>
        </div>
        <h4>Ответственные лица в организации</h4>
        <hr />

        <p>
            @Html.ActionLink("Редактировать", "Edit", new { id = Model.ClientKey }, htmlAttributes: new { @class = "btn btn-info" })
            @Html.ActionLink("Назад", "Index", null, htmlAttributes: new { @class = "btn btn-default" })
        </p>
    </div>
</body>
